{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: сборка ARM_x64.app файла",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-ferror-limit=100",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"main.cpp",
				"Core.cpp",
				"states/State.cpp",
				"states/MainMenu.cpp",
				"states/PauseMenu.cpp",
				"states/Process.cpp",
				"states/gfx.cpp",
				"states/NoiceView.cpp",
				"math/mymath.cpp",
				"math/ProcessGenerationNoice.cpp",
				"GUI/GUISYS.cpp",
				"GUI/tabMenu.cpp",
				"entitys/entity.cpp",
				"entitys/player.cpp",
				"entitys/AI/AIFollow.cpp",
				"entitys/AI/AIComponent.cpp",
				"entitys/properties/hitbox.cpp",
				"entitys/properties/movement.cpp",
				"Content/rotationCircle.cpp",
				"Content/Map/block.cpp",
				"Content/Map/TileMap.cpp",
				"-Isource/include/",
				"-o",
				"${workspaceFolder}/main.app",
				"-Lsource/lib",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system",
				"-w"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: /usr/bin/clang++"
		},
	]
}